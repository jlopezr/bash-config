#!/usr/bin/env bash
hash jq 2>/dev/null || { echo >&2 "I require jq but it's not installed.  Aborting."; exit 1; }
if [ "$#" -eq 1 ]; then
     jq -S . $1
elif [ "$#" -eq 2 ]; then
     jq -S . $1 > $2
elif [ "$#" -eq 4 ]; then
     # -r|-f <input json> <output json> <options file>
     jq -S . $2 > $3
else
    echo "Requires 1 or 2 arguments:"
    echo "    <input json>"
    echo "    <input json> <output json>"
fi
